{% extends 'admin/base.html.twig'%}

{% block contenu %}

    <div class="container">

        {{form_start(form)}}

            <div class="row">
                <div class="col-4">
                    {{form_row(form.nom)}}
                </div>
                <div class="col-4">
                    {{form_row(form.prix)}}
                </div>
                <div class="col-4">
                    {{form_row(form.dateAchat)}}
                </div>
            </div>

    {% if app.request.get('_route')== "app_admin_action_ajouter" ? 'Ajouter' : 'Modifier' %} 
        <button class ="btn btn-success" type="submit" >Ajouter</button>
    {% else %}
        <button class ="btn btn-success" type="submit" >Modifier</button>
    {% endif %}

        {{form_end(form)}}

    </div>

{% endblock %}